<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    app:cardCornerRadius="36dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:background="@drawable/ripple_button_background"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bank_name"
            style="@style/Titles_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginStart="8dp"
            android:text="فرع المنصور" />

        <TextView
            android:id="@+id/branch_name"
            style="@style/normal_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bank_name"

            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@+id/phone"
            android:drawablePadding="8dp"
            android:gravity="right"
            android:text="فرع المنصور"
            app:drawableStartCompat="@drawable/locaion_icon" />


        <TextView
            android:id="@+id/address_text"
            style="@style/hint_font"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_below="@id/branch_name"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@+id/phone_text"
            android:text="شارع ١٤ رمضان - بناية المصرف" />

        <TextView
            android:id="@+id/phone"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bank_name"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/phone_icon"
            android:drawablePadding="8dp"
            android:text="رقم التواصل" />


        <TextView
            android:id="@+id/phone_text"
            style="@style/hint_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_alignParentLeft="true"
            android:gravity="left"            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="12345679812" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

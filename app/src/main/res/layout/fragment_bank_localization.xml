<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.localization.BankLocalizationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/Titles_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/localization"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/title1"
            style="@style/normal_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp"
            android:text="@string/localization_bank_title"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/desc"
            style="@style/hint_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"

            android:text="@string/localization_bank_desc"
             />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.credits.CreditsFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/external_funding_icon" />

    <TextView
        android:id="@+id/title"
        style="@style/Titles_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/external_funding" />

    <TextView
        android:id="@+id/credits_desc"
        style="@style/hint_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/credits_desc" />


    <LinearLayout
        android:id="@+id/credits_list"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/documentary_credits"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ripple_background"
            android:drawableEnd="@drawable/go_icon"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:text="@string/documentary_credits" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/external_remittances"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_background"
            android:drawableEnd="@drawable/go_icon"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:text="@string/external_remittances" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.cards.CardTypeFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/services_toolbar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="8dp"
        android:src="@drawable/electronic_cards" />

    <TextView
        android:id="@+id/title"
        style="@style/Titles_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/electronic_cards" />


    <LinearLayout
        android:id="@+id/cards_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/debit_cards"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ripple_button_background"
            android:drawableLeft="@drawable/go_arrow"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/debit_cards" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/prepaid_cards"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/go_arrow"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_button_background"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/prepaid_cards" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/credit_card"
            style="@style/normal_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/go_arrow"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_button_background"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/credit_card" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_nav"
    app:startDestination="@id/nav_viewPagerFragment">

    <fragment
        android:id="@+id/fragment_first"
        android:name="com.example.masrafna.ui.onboarding.FirstFragment"
        android:label="first"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_fragment_first_to_fragment_second"
            app:destination="@id/fragment_second"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/fragment_second"
        android:name="com.example.masrafna.ui.onboarding.SecondFragment"
        android:label="second"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_fragment_second_to_fragment_third"
            app:destination="@id/fragment_third"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/fragment_third"
        android:name="com.example.masrafna.ui.onboarding.ThirdFragment"
        android:label="third"
        tools:layout="@layout/fragment_third">
        <action
            android:id="@+id/action_fragment_third_to_fragment_fourth"
            app:destination="@id/fragment_fourth"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/fragment_fourth"
        android:name="com.example.masrafna.ui.onboarding.FourthFragment"
        android:label="fourth"
        tools:layout="@layout/fragment_fourth">

    </fragment>
    <fragment
        android:id="@+id/nav_viewPagerFragment"
        android:name="com.example.masrafna.ui.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" />

</navigation>
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.masrafna.ui.navigation.fragments.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_contact"
        android:name="com.example.masrafna.ui.navigation.fragments.contact.ContactFragment"
        android:label="@string/contact"
        tools:layout="@layout/fragment_contact" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.masrafna.ui.navigation.fragments.profile.ProfileFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_notification"

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Masrafna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

    </style>


    <style name="buttno_backgroud">
        <item name="background">@drawable/main_gradient</item>
    </style>

    <style name="Theme.Masrafna.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Masrafna.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/white</item>

    </style>

    <style name="Theme.Masrafna.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ToolbarThem_font" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">


        <item name="android:fontFamily">@font/bahij_bold</item>

    </style>

    <style name="Titles_font">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bahij_bold</item>
    </style>

    <style name="icons_font">
        <item name="android:fontFamily">@font/bahij_semibold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="buttons">
        <item name="fontFamily">@font/bahij_bold</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="hint_font">
        <item name="fontFamily">@font/bahij_light</item>

    </style>

    <style name="normal_font">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bahij_semibold</item>

    </style>

</resources>
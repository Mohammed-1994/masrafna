<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.masrafna">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Masrafna">
        <activity
            android:name=".ui.services.ServicesActivity"
            android:exported="true"
            android:parentActivityName=".ui.navigation.NavigationDrawerActivity" />
        <activity
            android:name=".ui.navigation.NavigationDrawerActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.Masrafna.NoActionBar">

        </activity>


        <activity
            android:name=".ui.onboarding.SplashActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".ui.loging.LoggingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>